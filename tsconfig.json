{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}