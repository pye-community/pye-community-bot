{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "#/*": ["src/modules/*", "src/utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
